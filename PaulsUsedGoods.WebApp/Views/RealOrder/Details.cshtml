@model OrderViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dd class="col-sm-5" style="font-size:100%;  font-weight:bold">
            @Html.DisplayFor(model => model.PersonName)
        </dd>
        <dd class="col-sm-5" style="font-size:100%;  font-weight:bold">
            @Html.DisplayFor(model => model.StoreName)
        </dd>
        <dd class="col-sm-5" style="font-size:100%;  font-weight:bold">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dd class="col-sm-5" style="font-size:100% ; font-weight:bold">
            @Html.DisplayFor(model => model.TotalOrderPrice) $
        </dd>
    </dl>
</div>
<div class="form-group">
    <label asp-for="SortMethod" class="control-label"></label>
    <select asp-for="SortMethod" class="form-control" asp-items="ViewBag.Sorter"></select>
    <span asp-validation-for="SortMethod" class="text-danger"></span>
</div>
<div>
    @if (Model.Items.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Items.First().ItemName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Items.First().ItemDescription)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Items.First().ItemPrice)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ItemName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ItemDescription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ItemPrice)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>